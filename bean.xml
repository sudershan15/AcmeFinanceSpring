<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/cmpe277"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
    </bean>
		
	<bean id="stocksDAO" class="DAO.StocksDAOImpl">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	
	<bean id="loggingInterceptorBean" class="com.foo.Interceptors.LoggingInterceptor" />
 
	<bean id="stocksDAOProxy" 
                 class="org.springframework.aop.framework.ProxyFactoryBean">
 
		<property name="target" ref="DAO.stocksDAO" />
 
		<property name="interceptorNames">
			<list>
				<value>loggingInterceptorBean</value>
			</list>
		</property>
	</bean>
	
	
</beans>
